import java.util.Scanner;

public class WayTooLongWords {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int len = sc.nextInt();
		String s = "";
		String out="";
		for (int i = 0; i <= len; i++) {
			s=sc.nextLine();
			if (s.length() > 10) {
				out +=s.charAt(0);
				out +=s.length() - 2;
				System.out.print(s.charAt(s.length() - 1));

			} else {
				System.out.println();
			}
		}

	}

}
